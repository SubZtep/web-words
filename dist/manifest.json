{
  "manifest_version": 2,
  "name": "Web Words",
  "version": "0.2.0",
  "default_locale": "en",
  "description": "Word translator browser extension",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Web Words Browser Action",
    "default_icon": {
      "16": "icons/16x16.png",
      "24": "icons/24x24.png",
      "32": "icons/32x32.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "css": ["web-words.css"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["<all_urls>", "activeTab", "storage", "webRequest", "webRequestBlocking"]
}
