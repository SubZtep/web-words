{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "0.3.0",
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "icons/16x16.png",
      "24": "icons/24x24.png",
      "32": "icons/32x32.png"
    }
  },
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "css": ["web-words.css"],
      "js": ["browser-polyfill.min.js", "content.js"]
    }
  ],
  "homepage_url": "https://subztep.github.io/web-words/",
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "webRequest",
    "tabs"
  ]
}
